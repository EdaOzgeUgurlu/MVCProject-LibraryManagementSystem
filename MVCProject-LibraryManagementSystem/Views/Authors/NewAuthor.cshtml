@using MVCProject_LibraryManagementSystem.Models.ViewModels.AuthorViewModels
@model NewAuthorViewModel
@{
    ViewBag.Title = "New Author";
}
<h1>New Author</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control">
        <div class="form-text text-danger">
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control">
        <div class="form-text text-danger">
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control">
        <div class="form-text text-danger">
            <span asp-validation-for="DateOfBirth"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Details" class="form-label"></label>
        <input asp-for="Details" class="form-control">
        <div class="form-text text-danger">
            <span asp-validation-for="Details"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary" asp-action="Index">Go Back</a>
</form>
